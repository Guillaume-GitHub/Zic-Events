<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_profile_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/fragment_profile_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/fragment_profile_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                android:background="@color/colorPrimary"
                app:contentScrim="@color/colorPrimaryDark"
                app:expandedTitleTextAppearance="@style/AppTheme.CollapsingToolbarLayoutExpandedTextStyle"
                app:title="Guillaume Bague">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/fragment_profile_background_imageView"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/gradient_background"
                            android:scaleType="centerCrop"/>

                        <RelativeLayout
                            android:id="@+id/fragment_profile_user_info_top_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragment_profile_user_imageView_container"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                app:cardCornerRadius="250dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardElevation="0dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    app:cardCornerRadius="250dp"
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/fragment_profile_user_imageView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:background="@color/colorPrimaryLight" />

                                </androidx.cardview.widget.CardView>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragment_profile_change_photo_container"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="250dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardElevation="0dp"
                                android:layout_alignEnd="@id/fragment_profile_user_imageView_container"
                                android:layout_alignBottom="@id/fragment_profile_user_imageView_container">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:cardCornerRadius="250dp"
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center"
                                    app:cardBackgroundColor="@color/colorAccent">

                                    <androidx.appcompat.widget.AppCompatImageButton
                                        android:id="@+id/fragment_profile_change_photo_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="?attr/selectableItemBackground"
                                        android:src="@drawable/ic_photo_camera_24px" />

                                </androidx.cardview.widget.CardView>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="15dp"
                                android:layout_below="@id/fragment_profile_user_imageView_container"
                                android:layout_marginBottom="?attr/actionBarSize">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fragment_profile_user_name_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    tools:text="Guillaume Bague"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fragment_profile_user_description_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    tools:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt"
                                    android:maxLength="255"
                                    android:textAlignment="center"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </FrameLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/fragment_profile_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentStart="true"
                    app:layout_collapseMode="pin"
                    android:layout_gravity="top"
                    android:layout_marginBottom="?attr/actionBarSize" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/fragment_profile_tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:tabRippleColor="@color/colorPrimaryLight"
                    app:tabIconTint="@color/tabs_colors_states"
                    app:tabIndicatorColor="@color/colorAccent"
                    android:layout_gravity="bottom">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/fragment_profile_tab_item_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:icon="@drawable/ic_photo_camera_24px"/>

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/fragment_profile_tab_item_post"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:icon="@drawable/ic_account_black_24px" />

                </com.google.android.material.tabs.TabLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fragment_profile_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- TABS CONTENT -->

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>