<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_profile_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/create_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bonjour John"
        android:textStyle="bold"
        android:textSize="28sp"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_profile_title"
        android:layout_marginTop="46dp"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="@string/create_profile_gender"
            android:textSize="18sp"
            android:textColor="@color/shadowColorText"/>

        <RadioGroup
            android:id="@+id/create_profile_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_profile_man_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/create_profile_man_radio" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_profile_women_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/create_profile_woman_radio"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_profile_other_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/create_profile_other_radio" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_profile_input_layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_profile_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/create_profile_birth_date_hint"
                android:inputType="date"
                android:editable="true"
                android:longClickable="false"
                android:drawableEnd="@drawable/ic_date_range_24px" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_profile_input_layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="24dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/create_profile_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/create_profile_phone_hint"
                android:inputType="phone"
                android:drawableEnd="@drawable/ic_phone_24px"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_profile_input_layout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="24dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_profile_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_edit_location_hint"
                    android:inputType="text" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/create_profile_location_btn"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_alignTop="@id/create_profile_location"
                        android:layout_alignBottom="@id/create_profile_location"
                        android:layout_alignEnd="@id/create_profile_location"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_my_location_24px" />

                    <ProgressBar
                        android:id="@+id/create_profile_location_progress"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_alignTop="@id/create_profile_location"
                        android:layout_alignBottom="@id/create_profile_location"
                        android:layout_alignEnd="@id/create_profile_location"
                        android:indeterminate="true"
                        android:visibility="gone" />

            </RelativeLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/create_profile_type_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="24dp"
            android:text="@string/create_profile_pro_box"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/create_profile_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/rounded_corner_background"
            android:enabled="false"
            android:text="@string/hint_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>