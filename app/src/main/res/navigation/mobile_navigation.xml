<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/bottom_navigation_deal">

    <fragment
        android:id="@+id/bottom_navigation_deal"
        android:name="com.lab.zicevents.ui.deal.DealFragment"
        android:label="@string/title_deal"
        tools:layout="@layout/fragment_deal" />

    <fragment
        android:id="@+id/bottom_navigation_event"
        android:name="com.lab.zicevents.ui.event.EventFragment"
        android:label="@string/title_event"
        tools:layout="@layout/fragment_event" />

    <fragment
        android:id="@+id/bottom_navigation_deal_management"
        android:name="com.lab.zicevents.ui.manager.DealManagerFragment"
        android:label="@string/title_deal_management"
        tools:layout="@layout/fragment_deal_manager" />

    <fragment
        android:id="@+id/bottom_navigation_chat"
        android:name="com.lab.zicevents.ui.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/bottom_navigation_profile"
        android:name="com.lab.zicevents.ui.profile.ProfileFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/from_profile_to_profile_edit"
            app:destination="@id/bottom_navigation_profile_edit"
            app:launchSingleTop="true"
            app:popUpTo="@+id/bottom_navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/bottom_navigation_profile_edit"
        android:name="com.lab.zicevents.ui.profile.ProfileEditFragment"
        android:label="@string/profile_edit_title"
        tools:layout="@layout/fragment_profile_edit">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>
</navigation>