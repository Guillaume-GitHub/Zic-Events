<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- Splash Screen Style -->
    <style name="AppTheme.SplashScreenStyle" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <!-- Hide text in when collapsing toolbar layout are in expanded mode -->
        <style name="AppTheme.CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
            <item name="android:textColor">@android:color/transparent</item>
            <item name="android:textSize">0sp</item>
        </style>


    <!-- Style of TextInputLayout.FilledBox -->
    <style name="AppTheme.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorPrimaryLight</item>
    </style>

</resources>
